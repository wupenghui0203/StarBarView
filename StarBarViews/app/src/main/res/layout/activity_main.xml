<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <www.ycode.xiaowu.com.starbarview.StarBarView
        android:layout_marginLeft="22dp"
        android:layout_marginTop="22dp"
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:space_width="1dp"
        app:star_height="12dp"
        app:star_hollow="@mipmap/rb_gray"
        app:star_isIndicator="false"
        app:star_max="5"
        app:star_orientation="horizontal"
        app:star_rating="2"
        app:star_solid="@mipmap/rb_yellow"
        app:star_width="12dp"></www.ycode.xiaowu.com.starbarview.StarBarView>
    <www.ycode.xiaowu.com.starbarview.StarBarView
        android:layout_marginLeft="22dp"
        android:layout_marginTop="22dp"
        android:id="@+id/rating_bar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:space_width="1dp"
        app:star_height="24dp"
        app:star_hollow="@mipmap/rb_gray"
        app:star_isIndicator="false"
        app:star_max="5"
        app:star_orientation="horizontal"
        app:star_rating="3"
        app:star_solid="@mipmap/rb_yellow"
        app:star_width="24dp"></www.ycode.xiaowu.com.starbarview.StarBarView>
    <www.ycode.xiaowu.com.starbarview.StarBarView
        android:layout_marginLeft="22dp"
        android:layout_marginTop="22dp"
        android:id="@+id/rating_bar4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:space_width="1dp"
        app:star_height="30dp"
        app:star_hollow="@mipmap/rb_gray"
        app:star_isIndicator="false"
        app:star_max="5"
        app:star_orientation="horizontal"
        app:star_rating="2.4"
        app:star_solid="@mipmap/rb_yellow"
        app:star_width="30dp"></www.ycode.xiaowu.com.starbarview.StarBarView>
    <www.ycode.xiaowu.com.starbarview.StarBarView
        android:layout_marginLeft="22dp"
        android:layout_marginTop="22dp"
        android:id="@+id/rating_bar3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:space_width="1dp"
        app:star_height="24dp"
        app:star_hollow="@mipmap/rb_gray"
        app:star_isIndicator="false"
        app:star_max="5"
        app:star_orientation="vertical"
        app:star_rating="3"
        app:star_solid="@mipmap/rb_yellow"
        app:star_width="24dp"></www.ycode.xiaowu.com.starbarview.StarBarView>

</LinearLayout>
